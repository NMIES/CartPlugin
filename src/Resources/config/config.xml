<?xml version="1.0" encoding="UTF-8"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/trunk/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>Hintergrundfarbe</title>
        <input-field type="colorpicker">
            <name>cartBackgroundColor</name>
            <label>Hintergrundfarbe nachdem ein Artikel hinzugefügt wurde</label>
            <defaultValue>grey</defaultValue>
        </input-field>
    </card>

    <card>
        <title>Text</title>
        <input-field type="text">
            <name>cartText</name>
            <label>Beschriftung des Warenkorb-Buttons nachdem ein Artikel hinzugefügt wurde </label>
            <defaultValue>Wird in den Warenkorb gelegt</defaultValue>
        </input-field>
    </card>

</config>
